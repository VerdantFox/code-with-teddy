{
  "extends": "stylelint-config-recommended",
  "reportDescriptionlessDisables": true,
  "reportInvalidScopeDisables": true,
  "reportNeedlessDisables": true,
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "tailwind"]
      }
    ]
  },
  "ignoreFiles": ["**/tailwind-styles.css", "**/libraries/**"]
}
