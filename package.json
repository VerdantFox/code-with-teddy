{
  "name": "coding-with-teddy",
  "version": "1.0.0",
  "description": "Teddy's personal website",
  "scripts": {
    "watch-debug": "tailwindcss --config ./app/web/html/tailwind.config.js --input ./app/web/html/input.css --output ./app/web/html/static/css/tailwind-styles.css --watch",
    "watch": "tailwindcss --config ./app/web/html/tailwind.config.js --input ./app/web/html/input.css --output ./app/web/html/static/css/tailwind-styles.css --watch --minify",
    "build": "tailwindcss --config ./app/web/html/tailwind.config.js --minify --input ./app/web/html/input.css --output ./app/web/html/static/css/tailwind-styles.css --minify"
  },
  "author": "Theodore Williams",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/container-queries": "^0.1.1",
    "browser-sync": "^2.23.7",
    "prettier": "^3.1.0",
    "prettier-plugin-jinja-template": "^1.3.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.3.5"
  }
}
